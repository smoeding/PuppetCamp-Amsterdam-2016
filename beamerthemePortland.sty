%
% Beamer theme for Puppet Camp 2016
%
\mode<presentation>

% Primary colors
\definecolor{puppetblue}{RGB}{21,68,120}
\definecolor{puppetorange}{RGB}{240,167,46}
\definecolor{puppetviolet1}{RGB}{48,42,110}
\definecolor{puppetviolet2}{RGB}{125,101,172}

\setbeamercolor{palette primary}{use=structure,fg=white,bg=puppetblue}
\setbeamercolor{palette secondary}{use=structure,fg=black,bg=structure.fg!25!white}
\setbeamercolor{palette tertiary}{use=structure,fg=black,bg=structure.fg!50!white}
\setbeamercolor{palette quaternary}{use=structure,fg=black,bg=structure.fg!75!white}

\setbeamercolor{sidebar}{use=structure,bg=structure.fg!20!white}

\setbeamercolor{palette sidebar primary}{use=normal text,fg=normal text.fg}
\setbeamercolor{palette sidebar secondary}{use=structure,fg=structure.fg}
\setbeamercolor{palette sidebar tertiary}{use=normal text,fg=normal text.fg}
\setbeamercolor{palette sidebar quaternary}{use=structure,fg=structure.fg}

\setbeamercolor{section in toc}{use=structure,fg=black}
\setbeamercolor{section in toc shaded}{use=structure,fg=black}

\setbeamercolor{block title}{fg=white,bg=puppetviolet2}
\setbeamercolor{block body}{fg=black,use=block title,bg=block title.bg!5!bg}

\setbeamercolor{block title example}{fg=white,bg=puppetviolet2}
\setbeamercolor{block body example}{fg=black,use=block title example,bg=block title example.bg!5!bg}


\setbeamercolor{local structure}{fg=puppetorange}
\setbeamercolor*{titlelike}{parent=palette primary}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

\useinnertheme[shadow]{rounded}
\useoutertheme{smoothbars}

\setbeamerfont{title}{size=\normalfont\huge}
\setbeamerfont{subtitle}{size=\normalfont\slshape\large}
\setbeamerfont{author}{size=\normalfont\Large}
\setbeamerfont{institute}{size=\normalfont\slshape\footnotesize}
\setbeamerfont{date}{size=\normalfont\slshape\small}

\setbeamertemplate{headline}[default]
\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{itemize items}[triangle]
\setbeamertemplate{footline}{}
\setbeamertemplate{note page}[plain]
  
\setbeamertemplate{title page}{%
\begin{center}
  \begin{beamercolorbox}[sep=8pt,center,rounded=true,shadow=\beamer@themerounded@shadow]{title}
    \usebeamerfont{title}\inserttitle\par
    \vspace{0.5ex}%
    \usebeamerfont{subtitle}\insertsubtitle\par
  \end{beamercolorbox}
\vspace{5ex}%
  \begin{beamercolorbox}[sep=1pt,center]{author}
    \usebeamerfont{author}\insertauthor\par
    \vspace{0.3ex}%
    \usebeamerfont{institute}\insertinstitute\par
  \end{beamercolorbox}
\vspace{5ex}%
  \begin{beamercolorbox}[sep=1pt,center]{date}
    \usebeamerfont{date}\insertdate\par
  \end{beamercolorbox}
  \vspace{2ex}%
  {\usebeamercolor[fg]{titlegraphic}\inserttitlegraphic\par}
\end{center}
}

\mode<all>
